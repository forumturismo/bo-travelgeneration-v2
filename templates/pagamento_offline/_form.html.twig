        </div>

        <div class="form-group">
            {{ form_label(form.cliente) }}:
            {{ form_widget(form.cliente, {'attr': {'class': 'form-control form-control-solid '}})  }}

            <span class="text-danger">      {{ form_errors(form.cliente) }}</span>

        </div>

        <div class="form-group">
            {{ form_label(form.destino) }}:
            {{ form_widget(form.destino, {'attr': {'class': 'form-control form-control-solid '}})  }}

            <span class="text-danger">     {{ form_errors(form.destino) }}</span>

