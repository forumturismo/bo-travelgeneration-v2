


{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.numFile) }}:
            {{ form_widget(form.numFile, {'attr': {'class': 'form-control form-control-solid '}}) }}
