        <div class="form-group">
            {{ form_label(form.comercial) }}:
            {{ form_widget(form.comercial, {'attr': {'class': 'form-control form-control-solid '}})  }}

            <span class="text-danger">    {{ form_errors(form.comercial) }}</span>

        </div>
    </div>


    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.precoVenda) }}:
            {{ form_widget(form.precoVenda, {'attr': {'class': 'form-control form-control-solid '}})  }}

            <span class="text-danger">    {{ form_errors(form.precoVenda) }} </span>
        </div>


        <div class="form-group">
            {{ form_label(form.valorPago) }}:
            {{ form_widget(form.valorPago, {'attr': {'class': 'form-control form-control-solid '}})  }}
            <span class="text-danger">   {{ form_errors(form.valorPago) }}</span>
        </div>


        <div class="form-group">
            {{ form_label(form.valorPendente) }}:
            {{ form_widget(form.valorPendente, {'attr': {'class': 'form-control form-control-solid '}})  }}
            <span class="text-danger">    {{ form_errors(form.valorPendente) }}</span>
        </div>


        <div class="form-group">
            {{ form_label(form.metodoPagamento) }}:
            {{ form_widget(form.metodoPagamento, {'attr': {'class': 'form-control form-control-solid '}})  }}
            <span class="text-danger">    {{ form_errors(form.metodoPagamento) }}</span>
        </div>


    </div>
</div>
<button type="submit" class="btn btn-primary">{{ button_label }}</button>
{{ form_end(form) }}






